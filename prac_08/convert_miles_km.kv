BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            multiline: False
            on_text: app.handle_calculation()
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: alter_input
                text: 'Up'
                on_release: app.handle_increment(1)
            Button:
                id: alter_input
                text: 'Down'
                on_release: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_release: app.handle_calculation()
    Label:
        text: app.result
        color: (1, 1, 0, 1)
